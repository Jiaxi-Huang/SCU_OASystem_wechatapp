<view class="container">
  <view class="user-info">
    <!-- 用户头像 -->
    <image class="avatar" src="{{userAvatar}}" mode="aspectFit"></image>
    
    <!-- 用户信息条目 -->
    <view class="info-item">
      <text>ID</text>
      <text>{{userId}}</text>
    </view>
    <view class="info-item">
      <text>用户名</text>
      <text>{{userName}}</text>
    </view>
    <view class="info-item">
      <text>部门</text>
      <text>{{departmentMap[userDepartment] || '未知'}}</text>
    </view> 
    <view class="info-item">
      <text>角色</text>
      <text>{{roleMap[userRole] || '未知'}}</text>
    </view>
    <view class="info-item">
      <text>邮箱</text>
      <text>{{userEmail}}</text>
    </view>
    <view class="info-item">
      <text>手机号</text>
      <text>{{userPhone}}</text>
    </view>
    <view class="info-item">
      <text>个人简介</text>
      <text>{{userIntro}}</text>
    </view>
  </view>
  
  <view>
    <button class="edit-btn" bindtap="navigateToModifyPage">修改个人信息</button>
  </view>
</view>