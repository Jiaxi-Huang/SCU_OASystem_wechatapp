/* pages/weather/weather.wxss */

/* 主体 */
.main {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    text-align: center;
    margin-top: 20px;
  }
  
  /* 信息块 */
  .info view {
    margin-top: 10px;
    font-weight: 300;
  }
  
  .info .temp {
    font-weight: 700;
    font-size: 32px;  /* 放大字体 */
    color: black; /* 设置字体颜色为黑色 */
    display: flex;
    justify-content: center;
    width: 100%;
  }
  
  .info .type {
    font-size: 24px;  /* 放大字体 */
    margin-top: 5px;
    color: #607D8B;
  }
  
  .info .city {
    font-weight: bold;
    font-size: 28px;  /* 放大字体 */
    margin-top: 10px;
  }
  
  .info .week,
  .weather {
    font-size: 20px;  /* 放大字体 */
    color: #9E9E9E;
  }
  
  /* 分隔线 */
  .divider {
    width: 100%;
    height: 1px;
    background-color: #E0E0E0;
    margin: 20px 0;
  }
  
  /* 前三天温度显示区域 */
  .previous-days {
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 10px 0;
  }
  
  .previous-day {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 10px 0;
  }
  
  .previous-day .temp {
    font-weight: 600;
    font-size: 18px;  /* 缩小字体 */
    color: black;
  }
  
  .previous-day .type {
    font-size: 14px;  /* 缩小字体 */
    margin-top: 5px;
    color: #607D8B;
  }
  
  .previous-day .date {
    font-weight: bold;
    font-size: 16px;  /* 缩小字体 */
    margin-top: 10px;
  }
  
  /* 搜索块 */
  .search {
    display: flex;
    padding-top: 50rpx;
    justify-content: center;
  }
  
  .search form input {
    display: inline-block;
    border: 1px solid #BDBDBD;
    height: 60rpx;
    margin-right: 10rpx;
    padding-left: 10rpx;
    border-radius: 12rpx;
  }
  
  .search form button {
    display: inline-block;
    background-color: #FF5722;
    color: white;
    border: none;
    border-radius: 12rpx;
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
  }
  
  .bg-image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -999;
    object-fit: cover;
    opacity: 0.7;
  }
  