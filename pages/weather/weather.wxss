/* pages/weather/weather.wxss */

/* 主体 */
.main {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    text-align: center;
    margin-top: 20px;
  }
  
  /* 信息块 */
  .info {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .info .temp {
    font-weight: 700;
    font-size: 32px;  /* 放大字体 */
    color: black; /* 设置字体颜色为黑色 */
    margin-top: 10px;
  }
  
  .info .type {
    font-size: 24px;  /* 放大字体 */
    margin-top: 5px;
    color: #607D8B;
  }
  
  /* 天气图标 */
  .weather-icon {
    width: 100px;
    height: 100px;
    margin-bottom: 20px;
  }
  
  /* 数据网格 */
  .data-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 90%;
    margin-top: 20px;
  }
  
  /* 数据项 */
  .data-item {
    width: 30%;
    margin-bottom: 20px;
    text-align: center;
  }
  
  /* wenhao.png 图片 */
  .wenhao-icon {
    width: 30px;
    height: 30px;
    margin-bottom: 10px;
  }
  
  /* 数据标签 */
  .data-item .data-label {
    font-size: 16px;  /* 放大字体 */
    font-weight: bold;  /* 加粗 */
    color: #333;  /* 深色文字 */
  }
  
  /* 数据值 */
  .data-item .data-value {
    font-size: 18px;
    font-weight: bold;
    color: black;
    margin-top: 5px;
  }
  
  /* 搜索块 */
  .search {
    display: flex;
    padding-top: 50rpx;
    justify-content: center;
  }
  
  .search form input {
    display: inline-block;
    border: 1px solid #BDBDBD;
    height: 60rpx;
    margin-right: 10rpx;
    padding-left: 10rpx;
    border-radius: 12rpx;
  }
  
  .search form button {
    display: inline-block;
    background-color: #FF5722;
    color: white;
    border: none;
    border-radius: 12rpx;
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
  }
  
  .bg-image {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -999;
    object-fit: cover;
    opacity: 0.7;
  }