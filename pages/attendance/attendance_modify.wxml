<view class="container">
  <!-- 员工名 -->
  <view class="form-item">
    <text>员工名</text>
    <input
      value="{{form.userName}}"
      placeholder="请输入员工名"
      disabled
    />
  </view>

  <!-- 考勤日期 -->
  <view class="form-item">
    <text>考勤日期</text>
    <picker
      mode="date"
      value="{{form.attendanceDate}}"
      bindchange="onDateChange"
    >
      <view class="picker">{{form.attendanceDate || '请选择日期'}}</view>
    </picker>
  </view>

  <!-- 上班打卡时间 -->
  <view class="form-item">
    <text>上班打卡时间</text>
    <picker
      mode="time"
      value="{{form.checkIn}}"
      bindchange="onCheckInTimeChange"
    >
      <view class="picker">{{form.checkIn || '请选择时间'}}</view>
    </picker>
  </view>

  <!-- 上班打卡位置 -->
  <view class="form-item">
    <text>上班打卡位置</text>
    <picker
      mode="selector"
      range="{{locations}}"
      range-key="label"
      bindchange="onInLocationChange"
    >
      <view class="picker">{{form.inLocation || '请选择位置'}}</view>
    </picker>
  </view>

  <!-- 下班打卡时间 -->
  <view class="form-item">
    <text>下班打卡时间</text>
    <picker
      mode="time"
      value="{{form.checkOut}}"
      bindchange="onCheckOutTimeChange"
    >
      <view class="picker">{{form.checkOut || '请选择时间'}}</view>
    </picker>
  </view>

  <!-- 下班打卡位置 -->
  <view class="form-item">
    <text>下班打卡位置</text>
    <picker
      mode="selector"
      range="{{locations}}"
      range-key="label"
      bindchange="onOutLocationChange"
    >
      <view class="picker">{{form.outLocation || '请选择位置'}}</view>
    </picker>
  </view>

  <!-- 提交按钮 -->
  <button bindtap="onSubmit" class="submit-button">修改</button>
</view>