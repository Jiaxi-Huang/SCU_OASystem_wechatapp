.leave-list{
	padding: 0 20rpx;
}
.leave-item{
	display: flex;
	padding: 20rpx 0; 
	border-bottom: 1rpx solid #e8e8e8;
}
.leave-img{
	width: 220rpx;
	height: 156rpx;
}
.leave-item image{
	width: 220rpx;
	height: 156rpx;
}
.leave-text{
	flex: 1;
	margin-left: 20rpx;
	width: 100%;
}
.leave-text .leave-tite{
	color: #333;
	width: 100%;
	font-size: 34rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.leave-tags{
	margin: 6rpx 0;
}
.leave-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}
.leave-city{
	color: #666;
}
