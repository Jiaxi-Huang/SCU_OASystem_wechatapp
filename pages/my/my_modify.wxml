<view class="container container-gray">
  <view class="group">
    <view class="group-header">用户信息修改</view>
    <view class="group-body">
      <view class="input-list">
        <view class="input-item">
          <text class="input-item-label">用户名</text>
          <view class="input-item-content">
            <input type="text" value="{{username}}" bindinput="inputChange" data-field="username"></input>
          </view>
        </view>
        <view class="input-item">
          <text class="input-item-label">个人简介</text>
          <view class="input-item-content">
            <input type="text" value="{{intro}}" bindinput="inputChange" data-field="intro"></input>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="btn-submit">
    <button class="btn-block submit-btn" bindtap="formSubmit">提交</button>
  </view>
</view>